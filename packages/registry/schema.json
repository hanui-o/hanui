{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "HANUI Registry Schema - Component metadata for CLI tool",
  "patternProperties": {
    "^[a-z-]+$": {
      "type": "object",
      "required": ["name", "type", "files", "dependencies"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Component name (kebab-case)"
        },
        "type": {
          "type": "string",
          "enum": ["component", "ui"],
          "description": "Component type"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the component"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "NPM dependencies required by this component"
        },
        "devDependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "NPM dev dependencies required by this component"
        },
        "registryDependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Other HANUI components this component depends on"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "type"],
            "properties": {
              "path": {
                "type": "string",
                "description": "File path relative to components directory"
              },
              "type": {
                "type": "string",
                "enum": ["component", "lib", "hook"],
                "description": "File type"
              },
              "target": {
                "type": "string",
                "description": "Target path in user's project (optional, defaults to path)"
              }
            }
          },
          "description": "Files to be copied"
        },
        "tailwind": {
          "type": "object",
          "properties": {
            "config": {
              "type": "object",
              "description": "Tailwind config additions required"
            }
          },
          "description": "Tailwind CSS configuration requirements"
        }
      }
    }
  }
}
